<div class="form row">
  <div class="form-horizontal col-sm-offset-3 col-md-offset-3" id="register_form">
    <h3 class="form-title">用户注册</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="col-sm-9 col-md-9">
        <div class="form-group">
          <i class="fa fa-user fa-lg"></i>
          <div class="field">
            <%= f.label :邮箱 %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" ,placeholder:"email"%>
          </div>
        </div>
        <div class="form-group">
          <i class="fa fa-lock fa-lg"></i>
          <div class="field">
            <%= f.label :昵称 %>
            <%= f.text_field :user_name, autocomplete: "new-user_name",class: "form-control",placeholder:"username" %>
          </div>
        </div>
        <div class="form-group">
          <i class="fa fa-check fa-lg"></i>
          <div class="field">
            <%= f.label :密码 %>
            <% if @minimum_password_length %>
              <em>(至少<%= @minimum_password_length %>个字符)</em>
            <% end %><br/>
            <%= f.password_field :password, autocomplete: "new-password",class: "form-control",placeholder:"password" %>
          </div>
        </div>
        <div class="form-group">
          <i class="fa fa-check fa-lg"></i>
          <div class="field">
            <%= f.label :确认密码 %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control",placeholder:"re-type your password" %>
          </div>
        </div>
        <div class="form-group">
          <i class="fa fa-envelope fa-lg"></i>
          <div class="field">
            <%= f.label :手机号 %>
            <%= f.text_field :phone, autocomplete: "new-phone",class: "form-control",placeholder:"phone-number" %>
          </div>
        </div>
        <% if current_user %>
          <% if current_user.id > 0 %>
            <%= f.hidden_field :user_role, value: 1 %>
          <% else %>
            <%= f.hidden_field :user_role, value: 0%>
          <% end %>
        <% else %>
          <%= f.hidden_field :user_role, value: 0 %>
        <% end %>
        <div class="form-group">
          <div class="">
            <%= f.submit "注册",class:"btn btn-success pull-right" %>
          </div>
          <div class="btn btn-info pull-left">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


