<p id="notice"><%= notice %></p>

<table class="table table-hover table-responsive">
  <caption><h1>颜色</h1></caption>
  <thead>
  <tr>
    <th>名称</th>
    <th>描述</th>
  </tr>
  </thead>
  <tbody>
  <% @colors.each do |color| %>
    <tr>
      <td><%= color.rgb %></td>
      <td><%= color.description %></td>
      <td><%= link_to '修改', edit_color_path(color) %></td>
      <td><%= link_to '删除颜色', color, method: :delete, data: { confirm: "确认删除此颜色吗？" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to '新增颜色', new_color_path %>
